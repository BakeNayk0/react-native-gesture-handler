require 'pathname'
require 'json'

absolute_rn_path = File.dirname(`node --print "require.resolve('react-native-macos/package.json')"`)

require File.join(absolute_rn_path, "scripts/react_native_pods")
require File.join(File.dirname(`node --print "require.resolve('@react-native-community/cli-platform-ios/package.json')"`), "native_modules")
require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")

base_path = Dir.pwd
# use_react_native does not support relative absolute paths
relative_rn_path = Pathname.new(absolute_rn_path).relative_path_from(Pathname.new(base_path)).to_s

# Delete the codegen build folder
FileUtils.remove_dir("./build", true)

prepare_react_native_project!

target 'MacOSExample-macOS' do
  platform :macos, '10.15'
  use_expo_modules!
  use_native_modules!

  use_react_native!(
    :path => relative_rn_path,
    :hermes_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )
end

use_frameworks! :linkage => :static

post_install do |installer|
  react_native_post_install(installer, relative_rn_path)
end